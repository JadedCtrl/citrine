Greeter := Object new.
Greeter on: 'make' do: {\
	gr := Object new.
	gr on: 'setName:' do: { aname |
		my name := aname.
	}.
	gr on: 'greet' do: {\
		Pen write: my name.
	}.
	^gr.
}.
a := Greeter make.
b := Greeter make.
a setName: 'ONE'.
b setName: 'TWO'.
a greet.
b greet.
c := Object new.
c basedOn: a.
c setName: 'THREE'.
c greet.
d := Object new.
d basedOn: a.
d setName: 'FOUR'.
d greet.
c greet.
