Greeter = Object new.
Greeter method: 'make' does: {\
	gr = Object new.
	gr method: 'setName:' does: { aname |
		my name = aname.
	}.
	gr method: 'greet' does: {\
		Console write: my name.
	}.
	^gr.
}.

a = Greeter make.
b = Greeter make.

a setName: 'ONE'.
b setName: 'TWO'.
a greet.
b greet.

c = Object new.
c basedOn: a.
c setName: 'THREE'.
c greet.

d = Object new.
d basedOn: a.
d setName: 'FOUR'.
d greet.
c greet.
