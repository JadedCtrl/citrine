

☞ usedMemory1 := 0.
☞ usedMemory2 := 0.
☞ usedMemory3 := 0.
☞ usedMemory4 := 0.

Broom mode: 0.

4 times: { :i Pen write: i. }.
Pen brk.
4 to: 1 step: -1 do: { :i Pen write: i. }.
Pen brk.
( 1 > 2 ) false: { Pen write: 'BLOCK 1', brk. }.
( 2 > 1 ) true:  { Pen write: 'BLOCK 2', brk. }.

☞ i := 0.
{ ↲( i < 3). } true: { Pen write: i. i +=: 1. }.
Pen brk.

i := 3.
{ ↲( i > 0). } true: { Pen write: i. i := i - 1. }.
Pen brk.


Broom sweep.

usedMemory1 := Broom keptAlloc.


4 times: { :i Pen write: i. }.
Pen brk.
4 to: 1 step: -1 do: { :i Pen write: i. }.
Pen brk.
( 1 > 2 ) false: { Pen write: 'BLOCK 1', brk. }.
( 2 > 1 ) true:  { Pen write: 'BLOCK 2', brk. }.

i := 0.
{ ↲( i < 3). } true: { Pen write: i. i +=: 1. }.
Pen brk.

i := 3.
{ ↲( i > 0). } true: { Pen write: i. i := i - 1. }.
Pen brk.



Broom sweep.
usedMemory2 := Broom keptAlloc.


4 times: { :i Pen write: i. }.
Pen brk.
4 to: 1 step: -1 do: { :i Pen write: i. }.
Pen brk.
( 1 > 2 ) false: { Pen write: 'BLOCK 1', brk. }.
( 2 > 1 ) true:  { Pen write: 'BLOCK 2', brk. }.

i := 0.
{ ↲( i < 3). } true: { Pen write: i. i +=: 1. }.
Pen brk.

i := 3.
{ ↲( i > 0). } true: { Pen write: i. i := i - 1. }.
Pen brk.

Broom sweep.
usedMemory3 := Broom keptAlloc.



( usedMemory1 = usedMemory2 and: usedMemory1 = usedMemory3, and: usedMemory2 = usedMemory3 ) true: {
	Pen write: 'No memory leaks here'.
}, false: {
	Pen write: 'Leaking memory...'.
}.
