

usedMemory1 := 0.
usedMemory2 := 0.
usedMemory3 := 0.
usedMemory4 := 0.

Broom mode: 0.

txt := '1.6'.
n := txt toNumber.
t := txt toBoolean.
Pen write: n, brk.
Pen write: t, brk.
Pen write: n type, brk.
Pen write: t type, brk.

Broom sweep.

usedMemory1 := Broom keptAlloc.


txt := '1.6'.
n := txt toNumber.
t := txt toBoolean.
Pen write: n, brk.
Pen write: t, brk.
Pen write: n type, brk.
Pen write: t type, brk.

Broom sweep.
usedMemory2 := Broom keptAlloc.


txt := '1.6'.
n := txt toNumber.
t := txt toBoolean.
Pen write: n, brk.
Pen write: t, brk.
Pen write: n type, brk.
Pen write: t type, brk.

Broom sweep.
usedMemory3 := Broom keptAlloc.



( usedMemory1 = usedMemory2 and: usedMemory1 = usedMemory3, and: usedMemory2 = usedMemory3 ) ifTrue: {
	Pen write: 'No memory leaks here'.
}, ifFalse: {
	Pen write: 'Leaking memory...'.
}.
