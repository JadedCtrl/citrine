Greeter = Object new.
Greeter method: 'make' does: {\
	greeter = Object new.
	
	greeter method: 'name:' does: { name |
		Pencil write: 'setting a name'.
		my myName = name.
	}.
	
	greeter method: 'greet' does: {\
		Pencil write: 'Hello'.
		Pencil write: my myName.
	}.
	
	^greeter.
}.
greeter = Greeter make.
greeter name: 'sunshine!'.
greeter greet.
