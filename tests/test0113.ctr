✎ write: 'Continue for-loop, No - before 6 and up.', brk.
{ :i
	✎ write: (i + 1), brk.
	((i + 1) > 4) continue.
	✎ write: '-'.
} * 10.

☞ x := 0.
☞ xIsLessThan10 := { ↲( x < 10 ). }.
✎ brk.
✎ write: 'Continue while-true, No --> before 5 and up.', brk.
xIsLessThan10 true: {
	✎ write: 'iteration #' + x, brk.
	x add: 1.
	((x < 5) not) continue.
	✎ write: '-->'.
}.
✎ brk.
✎ write: 'Continue while-false, No - before 3 only.', brk.
{ ↲(x = 0). } false: {
	✎ write: 'iteration #' + x, brk.
	x subtract: 1.
	(x = 3) continue.
	✎ write: '-'.
}.

✎ brk.
✎ write: 'Continue times-loop, No ||| before 3.', brk.
{ :i
	✎ write: 'iteration #' + i, brk.
	(i = 2) continue.
	✎ write: '|||'.
} * 5.

