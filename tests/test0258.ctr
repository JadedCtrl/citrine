☞ myFile := File new: '/tmp/lock'.

myFile exists true: {
	myFile delete.
}.

myFile write: 'lock'.

☞ isLocked   := False.
☞ isUnlocked := False.

{ isLocked := myFile lock. ↲ isLocked. } false: { ⏰ wait: 1. }.
✎ write: isLocked, brk.

{ isLocked := myFile lock. ↲ isLocked. } false: { ⏰ wait: 1. }.
✎ write: isLocked, brk.

