✎ write: 'Break for-loop, 0-4.', brk.
{ :i
	✎ write: 'iteration #' + i, brk.
	(i = 4) break.
} * 10.

☞ x := 0.
☞ xIsLessThan10 := { ↲( x < 10 ). }.

✎ write: 'Break while-true loop, 0-4.', brk.
xIsLessThan10 true: {
	✎ write: 'iteration #' + x, brk.
	x +=: 1.
	((x < 5) not) break.
}.

✎ write: 'Break while-false loop, 5,4.', brk.
{ ↲(x = 0). } false: {
	✎ write: 'iteration #' + x, brk.
	x -=: 1.
	(x = 3) break.
}.

✎ write: 'Break times loop, 1-4.', brk.
{ :i
	✎ write: 'iteration #' + i, brk.
	(i = 4) break.
} * 5.

✎ write: 'Break block, dont print line.', brk.
{ True break. ✎ write: 'dont write this!', brk. } run.

✎ write: 'Break block, dont fire catch...', brk.
{ True break. ✎ write: 'dont write this!', brk. } catch: { ✎ write: 'Dont catch this!'. }, run.

