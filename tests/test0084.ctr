☞ makeAdder := { :x
	☞ f := { :y ↲ (⚿ x + y). } set: 'x' value: x. 
	↲ f.
}.
☞ mapper := { :array :func
	☞ mapping := { :i ⚿ q put: (⚿ f applyTo: (⚿ q @ i)) at: i. } 
	set: 'q' value: array,
	set: 'f' value: func.
	{ :i mapping applyTo: i. } * (array count).
}.

☞ a := List ← 1; 2; 3.
mapper applyTo: a and: (makeAdder applyTo: 100).
Pen write: (a at: 0), brk.
Pen write: (a at: 1), brk.
Pen write: (a at: 2), brk.
