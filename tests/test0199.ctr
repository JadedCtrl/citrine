
Broom mode: 4.

☞ Animal := Object new.
Animal on: 'make' do: {
	☞ animal := Object new.
	animal on: 'makeSound' do: {
		Pen write: my sound.
	}.
	↲animal.
}.
☞ Cat := Object new.
Cat on: 'make' do: {
	☞ cat := Animal make.
	cat on: 'init' do: {
		my sound := 'meow!'.
	}.
	cat init.
	↲cat.
}.
☞ tom := Cat make.
tom makeSound.
